@{
    @model List<Product>
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Supplier</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@(product.Category != null ? product.Category.Name : "-")</td>
                    <td>@(product.Supplier != null ? product.Supplier.Name : "-")</td>
                    <td>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-info">Details</a>
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-warning">Edit</a>
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="Home" asp-action="create" class="btn btn-primary">Create</a>
    </div>
</div>
