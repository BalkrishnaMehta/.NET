@{
    @model List<Product>
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Supplier</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@(product.Category != null ? product.Category.Name : "-")</td>
                    <td>@(product.Supplier != null ? product.Supplier.Name : "-")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
